<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/bootstrap/css/main.css")" rel="stylesheet" type="text/css" />*@
</head>
<body>

<div class="navbar">
    <div class="navbar-inner">
        <a href="@Url.Content("~/Home")" class="brand">Spantech Software Inc</a>
        <div class = "container">
            <ul id="menu" class="nav pull-right">
                <li>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                </li>
                <!-- add code to only show this when in admin mode -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Administration<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Approvals", "Index", "Home")</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                    </ul>
                </li>

                <li>@Html.ActionLink("Reporting", "Index", "Home")</li>
                <li>
                @if(Request.IsAuthenticated) {
                    <text>@Html.ActionLink("Log Off", "LogOff", "Account") </text>
                        }   
                    else {
                        @: @Html.ActionLink("Log On", "LogOn", "Account")
                    }                
                </li>
           </ul>
       </div>
    </div>
</div>
<div class="wrapping">
    <div class="container-fluid">
        <div class="row-fluid">
        
            <div id="sidebar" class="span2">
            @if(IsSectionDefined("sidebar")){
                @RenderSection("sidebar", required: false)  
                }
                else{
                <ul class="thumbnails">
                    <li class="span3">
                       <span>This is where some details
                       For the app would go</span>
                    </li>
                </ul>
                }                
            </div>
            <div class="span10">
                    @RenderBody()
            </div>
        </div>
    </div>
    <div id="footer">

    </div>
</div>
    <script src="@Url.Content("~/bootstrap/js/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap-dropdown.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/bootstrap/js/main.js")" type="text/javascript"></script>
</body>
</html>
